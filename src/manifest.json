{
    "manifest_version": 2,
    "name": "Kestrel",
    "description": "",
    "version": "0.0.0.1",

    "permissions": [
        "alarms",
        "idle",
        "storage",
        "tabs",
        "activeTab",
        "search"
    ],

    "background": {
        "scripts": [
            "background/main.js"
        ]
    },

    "commands": {
        "activate": {
            "suggested_key": {
                "default": "Alt+Shift+Q",
                "linux": "Ctrl+Shift+Q"
            },
            "description": "Open Kestrel command interface"
        }
    }
}