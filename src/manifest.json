{
    "manifest_version": 2,
    "name": "Kestrel",
    "description": "General browser utilities",
    "version": "1.0.1",
    "icons": {
        "48": "icons/icon.png",
        "96": "icons/icon@2x.png"
    },
    "permissions": ["storage", "tabs", "activeTab", "file://*/*", "https://*/*", "http://*/*"],
    "optional_permissions": ["history"],
    "background": {
        "scripts": ["background/main.js"]
    },
    "user_scripts": {
        "api_script": "background/scriptApi.js"
    },
    "commands": {
        "_execute_browser_action": {
            "suggested_key": {
                "default": "Alt+Shift+Q"
            },
            "description": "Open Kestrel command interface"
        },
        "open_kestrel_page_action": {
            "suggested_key": {
                "default": "Alt+Q"
            },
            "description": "Open page information."
        }
    },
    "browser_action": {
        "default_icon": {
            "19": "icons/icon.png"
        },
        "default_title": "Kestrel - Search Commands",
        "default_popup": "cs/index.html"
    },
    "page_action": {
        "default_icon": {
            "19": "icons/icon.png"
        },
        "default_title": "Kestrel",
        "default_popup": "page_action/index.html",
        "browser_style": true,
        "show_matches": ["file://*/*", "https://*/*", "http://*/*"]
    },
    "options_ui": {
        "page": "pages/settings/index.html",
        "browser_style": true,
        "open_in_tab": true
    }
}
