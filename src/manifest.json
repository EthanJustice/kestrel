{
    "manifest_version": 2,
    "name": "Kestrel",
    "description": "",
    "version": "0.0.0.1",

    "icons": {
        "48": "icons/icon.png",
        "96": "icons/icon@2x.png"
    },

    "permissions": [
        "alarms",
        "idle",
        "storage",
        "tabs",
        "activeTab",
        "search"
    ],

    "background": {
        "scripts": [
            "background/main.js"
        ]
    },

    "commands": {
        "activate": {
            "suggested_key": {
                "default": "Alt+Shift+Q",
                "linux": "Ctrl+Shift+Q"
            },
            "description": "Open Kestrel command interface"
        }
    },

    "options_ui": {
        "page": "options/index.html",
        "browser_style": false,
        "open_in_tab": true
    }
}